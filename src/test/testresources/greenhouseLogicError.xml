    <error title="lily" capriciousness="high">
        <visual-parameters> <!--ввести общий тип tips  и добавить в него кучу маленьких типов -->
            <height>50</height>
        </visual-parameters>
        <visual-parameters>
            <stick-color>green</stick-color>
        </visual-parameters>
        <growing-tips>
            <heliophilous>true</heliophilous>
        </growing-tips>
        <growing-tips>
            <watering>200</watering>
        </growing-tips>
        <growing-tips>
            <min-temperature>22</min-temperature>
        </growing-tips>
        <growing-tips>
            <max-temperature>41</max-temperature>
        </growing-tips>
        <multiplying>seed</multiplying>
        <soil>podzolic</soil>
        <flowering-time>
            <start-month>--05</start-month>
            <end-month>--07</end-month>
        </flowering-time>
        <possible-inflorescence-color>
            <color>white</color>
            <color>red</color>
            <color>yellow</color>
        </possible-inflorescence-color>
    </error>

